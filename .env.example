# LINE Bot 設定
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_USER_ID=your_user_id_here

# LINE 通知フラグ
# デフォルト: master=1（有効）、各種=0（無効）

# 全通知のマスター ON/OFF（0 で全停止。日次/週次・アラートも止まる）
LINE_NOTIFY_ENABLED=1

# トレード成立時の通知
LINE_NOTIFY_TRADES_ENABLED=0

# 勝率マイルストーン到達時の通知
LINE_NOTIFY_WINRATE_ENABLED=0

# 汎用 ad-hoc 通知
LINE_NOTIFY_GENERIC_ENABLED=0

# 異常アラート通知（DATA_STALE, HALTED など）
LINE_NOTIFY_ALERTS_ENABLED=1

# 日次/週次レポート通知（alerts only 運用では 0 推奨）
LINE_NOTIFY_REPORTS_ENABLED=0

# 日次/週次レポートの送信時刻
# - 日次レポート: 朝07:00 / 夕19:00 JST
# - 週次レポート: 月曜07:05 JST

# B1 Structure Snapshot 更新間隔（秒）
# 優先順位: ENV > config/trade.json > default(20)
# 0 を指定すると毎tick更新（デバッグ向け）
# 本番推奨: 30（安定寄り）
# B1_SNAPSHOT_REFRESH_SEC=30

# Depth SR Aggregator ログレベル
# silent | error | warn | info | debug
# デフォルトは error（通常ログのノイズ抑制）
# DEPTH_SR_LOG_LEVEL=error
